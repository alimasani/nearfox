<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_event_filter_container"
    android:layout_width="match_parent"
    android:padding="-16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_event_filter_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_view_event_filter_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image_view_event_filter_categories"
        android:layout_alignLeft="@+id/image_view_event_filter_categories"
        android:layout_alignRight="@+id/image_view_event_filter_categories"
        android:layout_alignTop="@+id/image_view_event_filter_categories"
        android:background="@color/transparent_black_background"
        android:gravity="center"
        android:textColor="#eeffffff"
        android:textSize="18sp"
        />

</RelativeLayout>