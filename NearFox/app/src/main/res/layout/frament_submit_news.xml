<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:id="@+id/scrollNews">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of the story"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/submitStoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittext_background"
            android:textCursorDrawable="@drawable/cursorbackground"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Describe your story"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/submitNewsStory"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbarStyle="insideInset"
            android:overScrollMode="always"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittext_background"
            android:textCursorDrawable="@drawable/cursorbackground"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Contact Number"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/submitContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittext_background"
            android:textCursorDrawable="@drawable/cursorbackground"
            android:digits="0123456789"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Locality"

            android:textColor="#000"
            android:textSize="16sp" />

        <in.nearfox.nearfox.view.PlaceAutoComplete
            android:id="@+id/submitLocality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="3"

            android:background="@drawable/edittext_background"
            android:textCursorDrawable="@drawable/cursorbackground"
            android:singleLine="false"

            android:textSize="16sp" />



        <TextView
            android:id="@+id/uploadFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_upload"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Upload Files"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_button_background"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_marginBottom="50dp" />
    </LinearLayout>
</ScrollView>