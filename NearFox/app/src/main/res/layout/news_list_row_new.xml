<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/standar_padding"
    android:paddingRight="@dimen/standar_padding"
    android:onClick="on_click_news"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            >

            <ImageView
                android:id="@+id/news_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="He murdered she in Powai"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                />

        </FrameLayout>



        <TextView
            android:id="@+id/news_id"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="event_id"
            />

        <TextView
            android:id="@+id/news_local_db_id"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:text="event_id"
            />

        <TextView
            android:id="@+id/news_category"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_width="0dp"
            />

        <TextView
            android:id="@+id/news_image_src"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_width="0dp"
            />

        <TextView
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_below="@+id/news_imageView"
            android:layout_height="wrap_content"
            android:id="@+id/news_description"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:typeface="serif"
            android:textSize="18sp"
            android:textColor="@color/fbutton_color_asbestos"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:layout_marginTop="-5dp"
        >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/rectangle"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="26dp"
            android:inputType="textCapWords|textNoSuggestions"
            android:text="TOI"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/news_period"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="time"
            android:gravity="right"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            />
    </FrameLayout>
</LinearLayout>